<!-- Bootstrap Toast Notification -->
<div aria-live="polite" aria-atomic="true" class="position-relative">
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="toastNotification" class="toast text-white @ViewData["ToastBgColor"]" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <i class="@ViewData["ToastIcon"] me-2"></i>
                <strong class="me-auto">Notification</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                @ViewData["Notification"]
            </div>
        </div>
    </div>
</div>

<script>
    window.onload = function () {
        // Show toast notification if there is a message
        if ("@ViewData["Notification"]") {
            var toastEl = document.getElementById('toastNotification');
            var toast = new bootstrap.Toast(toastEl);
            toast.show();
        }
    };
</script>
